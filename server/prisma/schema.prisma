datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  createdAt DateTime
}

model Game {
  id         String @id //gameは一つだけどないといけない
  bombMap    Json       //number[][]
  userInputs Json       //number[][]
}

model Cell {
  where      Json      @id //{x:number,y:number}は一意
  whoOpened  String        //UserId
  whenOpened DateTime?
}
